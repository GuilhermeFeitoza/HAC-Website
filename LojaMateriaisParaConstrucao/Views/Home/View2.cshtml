
@{
    ViewBag.Title = "DetalheProduto";
    Layout = "~/Views/Shared/LayoutLogado.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Detalhe - House and Construction</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Detalhe.css" rel="stylesheet" />
    <style>
        #coracao {
            height: 40px;
        }


        #CaixaComentario {
            border: 1px solid #ccc;
            width: 100%;
            height: 10%;
            padding: 10px;
        }

        #Comentario {
            font-size: 16pt;
        }

        #TipoComentario {
            font-weight: bold;
            font-size: 24pt;
        }

        #Cmt {
            padding-left: 2%;
            padding-top: 2%;
            padding-bottom: 2%;
        }

        #data {
            font-size: 12pt;
        }

        #NomeCli {
            font-size: 12pt;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="card">
            <div class="container-fliud">
                <div class="wrapper row">
                    <div class="preview col-md-6">
                        <div class="preview-pic tab-content">
                            <div class="tab-pane active" id="pic-1"><img src="http://placekitten.com/400/252" /></div>
                        </div>
                    </div>
                    <div class="details col-md-6">
                        <h3 class="product-title">TITULO DO PRODUTO</h3>
                        <p class="product-description">AQUI FICARA A DESCRICAO DO PRODUTO</p>
                        <h4 class="price">PREÇO: <span id="preco">$180</span></h4>
                        <div class="action">
                            <button class="add-to-cart btn btn-default" type="button">Adicionar ao carrinho</button><br /><br />
                            <button class="like btn btn-default" type="button"><span class="fa"><img src="~/img/Icones/Ic_log/icons8-red-heart-64.png" id="coracao" /></span></button>
                            <br /><a href="javascript:history(-1);">Voltar <<</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <h1 style="text-align: center">Comentários</h1>

    <div class="row">
        <div id="CaixaComentario">
            <div id="Cmt">
                <span id="TipoComentario">Tipo Comentario</span><br /><br />
                <p><span id="data">DD/AA/TTAA</span></p>
                <span id="Comentario">Comentario</span><br /><br />
                <span id="NomeCli">Nome do cliente</span>
            </div>
        </div>
    </div>

    <br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
</body>
</html>
