@model IEnumerable<LojaMateriaisParaConstrucao.Models.sp_cupomadquirido_Result>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/scripts/jquery.min.js"></script>

    <title>MensagemCupom</title>

    <style>
        #page {
            margin: auto;
            width: 900px;
            /*border: 1px solid #000;*/
        }

        h2 {
            text-align: center;
        }

        #parabens {
            color: #1e90ff;
        }

        #MsgParabens {
            text-align: justify;
            /*width: 370px;*/
            margin: auto;
        }

        #divImagemCuponzinho {
            margin: auto auto auto 0px;
            width: 200px;
        }

        #imgCuponzinho {
            height: 200px;
        }

        #divCupom {
            /*height: 100%;*/
            width: 300px;
            margin: 0px auto;
            /*background-image: url(../../img/Icones/IconesMENU/icons8-redeem-64.png);
            background-repeat: no-repeat;*/
            border: 1px solid #c8ffff;
            background-color: #1e90ff;
        }

        #ImgCodCupom {
            margin: 0px auto;
            width: 200px;
        }

        #CodCupom {
            margin: 0px auto;
            text-align: center;
            background-color: #fff /*#fe810a*/;
            font-size: 15pt;
            padding-top: 3px;
            color: #1e90ff;
        }

        #textCupom1 {
            text-align: center;
            /*color: #fe810a;*/
            color: #fff;
            padding: 0;
            margin: 0;
        }

        #textCupom2 {
            text-align: center;
            color: #fff;
            padding: 0;
            margin: 0;
        }

        #divImgLogoCupom {
            width: 100px;
            margin: auto;
        }

        #imgLogoCupom {
            width: 100%;
        }

        #lblDesc {
            text-align: center;
            width: 300px;
            margin: auto;
            padding: 0px 10px 0px 10px;
            font-size: 10pt;
            color: #1e90ff;
        }

        #h3 {
            margin: auto 0px auto auto;
            width: 170px;
        }

        #dataInicio {
         
            font-size: 15pt;
        }

        #dataFim {
    
            font-size: 15pt;
        }
    </style>

</head>
<body>
    <br /><br /> <br />
    @foreach (var item in Model)
    {
        <div class="container" id="page">
            <div class="row">
                <div class="col-sm-8">
                    <h2 id="parabens">Parabéns!!!</h2>
                    <h2 id="MsgParabens">Você acabou de ganhar um cupom para utilizar em nossa loja na proxima compra</h2>
                </div>
                <div class="col-sm-4">
                    <div id="divImagemCuponzinho">
                        <img src="~/img/Icones/IconesMENU/icons8-redeem-64.png" id="imgCuponzinho" />
                    </div>
                </div>
            </div> <br /><br />
            <div class="row">
                <div class="col-sm-12">
                    <div id="divCupom">
                        <p id="textCupom1">Use o Código</p>
                        <div id="ImgCodCupom">
                            <p id="CodCupom">@Html.DisplayFor(m => item.CodigoCupom)</p>
                        </div>
                        <p id="textCupom2">E ganhe <span id="porcentoDesconto" style="font-size: 11pt;">R$@item.ValorCupom</span> de desconto na próxima compra</p>
                        <div id="divImgLogoCupom">
                            <img src="~/img/logo.png" id="imgLogoCupom" />
                        </div>
                    </div>
                    @*<p id="lblDesc">Descrição</p>*@ <br />
                    <div class="row">
                        <div class="col-sm-5">
                            <h3>Valor R$<strong id="precoCupom">@item.ValorCupom</strong></h3>
                        </div>
                        <div class="col-sm-4">
                            <h3 id="h3">De <span id="dataInicio">@item.DataInicio</span> </h3>
                        </div>
                        <div class="col-sm-3">
                            <h3>Até <span id="dataFim">@item.DataFim</span></h3>
                        </div>
                    </div>



                </div>
            </div>
            <br /><br /><br /><br /> <br /><br /> <br /><br />

        </div>




    }
    
</body>
</html>
